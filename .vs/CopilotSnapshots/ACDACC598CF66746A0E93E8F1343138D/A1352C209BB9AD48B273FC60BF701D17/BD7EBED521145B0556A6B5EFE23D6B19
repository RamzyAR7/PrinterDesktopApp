        /// <summary>
        /// Configures basic form settings and layout
        /// </summary>
        private void SetupForm()
        {
            // Configure form for RTL
            this.RightToLeft = System.Windows.Forms.RightToLeft.Yes;
            this.RightToLeftLayout = true;
            
